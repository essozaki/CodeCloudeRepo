@using CodeCloude.Models
@model SliderVM;


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="">
    <div class="">

        <h2>حذف البانر</h2>

        <form asp-controller="Slider" asp-action="Delete" class="form-group ">

            <div asp-validation-summary="All;" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.Id" disabled class="form-control" />
            <input type="hidden" asp-for="@Model.Slider_ImgUrl" disabled class="form-control" />

               <label>العتوان</label>
            <input type="Text" asp-for="Title" disabled class="form-control" />
            <br />
            <br />
               <label>الوصف</label>
            <input type="Text" asp-for="Sub_Title" disabled class="form-control" />
            <br />
            <br />

            <label> صورة البانر</label>
            <div style="width:150px;Height:150px">
                <img src="~/Uploads/Slider/@Model.Slider_ImgUrl" alt="Card image cap" style="width:100%; height:100% ; border-radius:5px">
            </div>
            <br />
            <br />
            

            <center>
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-controller="Slider" asp-action="Edite" asp-route-id="@Model.Id" class="btn btn-primary">تعديل</a>

            </center>
            <br />
            <br />
        </form>
        <center>
            <a asp-controller="Slider" asp-action="Index" class="btn btn-success">العودة</a>
        </center>
    </div>
</section>

