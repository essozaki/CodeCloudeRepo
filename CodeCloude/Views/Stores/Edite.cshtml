@using CodeCloude.Models
@model StoresVM;
@{
    ViewData["Title"] = "Create";
}


<!-- Basic Vertical form layout section start -->
<section id="basic-vertical-layouts">
    <div class="row match-height">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">تعديل المتجر</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form class="form form-vertical" asp-action="Edite" asp-controller="Stores" enctype="multipart/form-data">
                        <input type="hidden" asp-for="@Model.Id" />
                        <input type="hidden" asp-for="@Model.Stor_ImgUrl" />
                        <div class="form-body">
                            <div class="row">

                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="first-name-vertical">اسم المتجر</label>
                                        <input type="text" id="first-name-vertical" class="form-control" asp-for="Stor_Title" placeholder="اسم المتجر">
                                    </div>
                                </div>
                                       <div class="col-12">
                                    <div class="form-group">
                                        <label for="first-name-vertical">عنوان المتجر</label>
                                        <input type="text" id="first-name-vertical" class="form-control" asp-for="Stor_Address" placeholder="عنوان المتجر">
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="first-name-vertical">رابط المتجر</label>
                                        <input type="text" id="first-name-vertical" class="form-control" asp-for="Stor_Link" placeholder="رابط المتجر">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="first-name-vertical">رقم الهاتف</label>
                                        <input type="text" id="first-name-vertical" class="form-control" asp-for="Stor_PhoneNumber" placeholder="رقم الهاتف">
                                    </div>
                                </div>


                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="first-name-vertical">تفاصيل المتجر</label>
                                        <input type="text" id="first-name-vertical" class="form-control" asp-for="Stor_Deteils" placeholder="تفاصيل المتجر">
                                    </div>
                                </div>


                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="first-name-vertical">عرض المتجر</label>
                                        <input type="text" id="first-name-vertical" class="form-control" asp-for="Stor_Offer" placeholder="عرض المتجر">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="first-name-vertical">كود الخصم</label>
                                        <input type="text" id="first-name-vertical" class="form-control" asp-for="Stor_SaleCode" placeholder="كود الخصم">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>البلد</label>
                                        <select asp-for="CountId" class="form-control" asp-items="(SelectList)ViewBag.countriesLis">
                                        </select>
                                        <span asp-validation-for="CountId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>القسم</label>
                                        <select asp-for="CatgId" class="form-control" asp-items="(SelectList)ViewBag.Categs">
                                        </select>
                                        <span asp-validation-for="CatgId" class="text-danger"></span>
                                    </div>
                                </div>




                                <div class="col-lg-6 col-md-12">
                                    <fieldset class="form-group">
                                        <label for="basicInputFile"> صورة المتجر</label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" asp-for="Photo" id="inputGroupFile01">
                                            <label class="custom-file-label">Choose file</label>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary mr-1 mb-1">حفظ</button>
                                    <a asp-action="Index" asp-controller="Stores" class="btn btn-outline-primary">العودة</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>


