@using CodeCloude.Models
@model StoresVM;


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="">
    <div class="">

        <h2>حذف المتجر</h2>

        <form asp-controller="Stores" asp-action="Delete" class="form-group ">

            <div asp-validation-summary="All;" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.Id" disabled class="form-control" />
            <input type="hidden" asp-for="@Model.Stor_ImgUrl" disabled class="form-control" />

            <label>اسم المتجر </label>
            <input type="Text" asp-for="Stor_Title" disabled class="form-control" />
            <br />
            <br />
            <label>عنوان المتجر </label>
            <input type="Text" asp-for="Stor_Address" disabled class="form-control" />
            <br  />
            <br />            <label>رابط المتجر</label>
            <a href="@Model.Stor_Link">
               Store Link
            </a>
            <br />
            <br />
        

            <label>تفاصيل المتجر </label>
            <input type="Text" asp-for="Stor_Deteils" disabled class="form-control" />
            <br />
            <br />

            <label>رقم الهاتف </label>
            <input type="Text" asp-for="Stor_PhoneNumber" disabled class="form-control" />
            <br />
            <br />

            <label>عرض المتجر </label>
            <input type="Text" asp-for="Stor_Offer" disabled class="form-control" />
            <br />
            <br />

            <label>كود الخصم  </label>
            <input type="Text" asp-for="Stor_SaleCode" disabled class="form-control" />
            <br />
            <br />

            <label>البلد </label>
            <input type="Text" asp-for="Countries.Cont_Name" disabled class="form-control" />
            <br />
            <br />
            
            <label>القسم  </label>
            <input type="Text" asp-for="Categories.Categ_Name" disabled class="form-control" />
            <br />
            <br />

            <label>صورة المتجر</label>
            <div style="width:150px;Height:150px">
                <img src="~/Uploads/Stores/@Model.Stor_ImgUrl" alt="Card image cap" style="width:100%; height:100% ; border-radius:5px">
            </div>
            <br />
            <br />


            <center>
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-controller="Stores" asp-action="Edite" asp-route-id="@Model.Id" class="btn btn-primary">تعديل</a>

            </center>
            <br />
            <br />
        </form>
        <center>
            <a asp-controller="Stores" asp-action="Index" class="btn btn-success">العودة</a>
        </center>
    </div>
</section>

