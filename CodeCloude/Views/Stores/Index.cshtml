@using CodeCloude.Models
@model IEnumerable<StoresVM>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Scroll - horizontal and vertical table -->
<section id="horizontal-vertical">
    <div class="dt-buttons btn-group">
        <a asp-action="Create" asp-controller="Stores" class="btn btn-outline-primary" style="margin:20px">
            <span><i class="feather icon-plus"></i></span>
        </a>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">المتاجر</h4>
                </div>
                <div class="card-content">
                    <div class="card-body card-dashboard">
                        <div class="table-responsive">
                            <table class="table nowrap scroll-horizontal-vertical">
                                <thead>
                                    <tr>
                                        <th>اسم المتجر </th>

                                        <th>رابط المتجر</th>
                                        <th>القسم </th>
                                        <th>صورة المتجر</th>
                                        <th>المميزه</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Stor_Title</td>
                                            <td>
                                                <a href="@item.Stor_Link">اضغط هنا </a>
                                            </td>
                                            <td>@item.Categories.Categ_Name</td>
                                           

                                            <td>

                                                <img style="width:50px;Height:50px" src="~/Uploads/Stores/@item.Stor_ImgUrl" alt="Card image cap" style="width:100%; height:100% ; border-radius:5px">

                                            </td>
                                             @if (item.IsSpecial==true)
                                            {
                                                <td>
                                                    <a asp-controller="Stores" asp-action="DeletteSpecial" asp-route-id="@item.Id" class="btn btn-danger">حذف </a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <a asp-controller="Stores" asp-action="CreateSpecial" asp-route-id="@item.Id" class="btn btn-primary">اضافه </a>
                                                </td>
                                            }


                                            <td><a asp-controller="Stores" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">تفاصيل</a></td>

                                            <td class="product-action">
                                                <a asp-action="Edite" asp-controller="Stores" asp-route-id="@item.Id">
                                                    <span class="action-edit"><i class="feather icon-edit"></i></span>
                                                </a>
                                                <a asp-action="Delete" asp-controller="Stores" asp-route-id="@item.Id">
                                                    <span class="action-delete"><i class="feather icon-trash"></i></span>
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Scroll - horizontal and vertical table -->
