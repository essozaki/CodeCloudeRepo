@using CodeCloude.Models
@model SubscriptionsVM;


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="">
    <div class="">

        <h2>حذف الاشتراك</h2>

        <form asp-controller="Subscriptions" asp-action="Delete" class="form-group ">

            <div asp-validation-summary="All;" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.Id" disabled class="form-control" />
            <input type="hidden" asp-for="@Model.ImgUrl" disabled class="form-control" />

            <label>عنوان الاشتراك </label>
            <input type="Text" asp-for="Subscription_Title" disabled class="form-control" />
            <br />
            <br />
            
        

            <label>عدد الاعلانات </label>
            <input type="Text" asp-for="Ads_Number" disabled class="form-control" />
            <br />
            <br />
            <label>مده الاشتراك </label>
            <input type="Text" asp-for="Subscription_Period" disabled class="form-control" />
            <br />
            <br />


            <label>صورة الاشتراك</label>
            <div style="width:150px;Height:150px">
                <img src="~/Uploads/Subscriptions/@Model.ImgUrl" alt="Card image cap" style="width:100%; height:100% ; border-radius:5px">
            </div>
            <br />
            <br />


            <center>
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-controller="Subscriptions" asp-action="Edite" asp-route-id="@Model.Id" class="btn btn-primary">تعديل</a>

            </center>
            <br />
            <br />
        </form>
        <center>
            <a asp-controller="Subscriptions" asp-action="Index" class="btn btn-success">العودة</a>
        </center>
    </div>
</section>

