@using CodeCloude.Models
@model BankDetailsVM;
@{
    ViewData["Title"] = "Create";
}


<!-- Basic Vertical form layout section start -->
<section id="basic-vertical-layouts">
    <div class="row match-height">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">تعديل البانر</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form class="form form-vertical" asp-action="Edite" asp-controller="BankDetails" enctype="multipart/form-data">
                        <input type="hidden" asp-for="@Model.Id" />
                        <div class="form-body">
                            <div class="row">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="first-name-vertical">رقم الحساب</label>
                                            <input type="text" id="first-name-vertical" class="form-control" asp-for="accountNumber" placeholder="رقم الحساب">
                                        </div>
                                    </div>

                                    <div class="col-12">
                                    <button type="submit" class="btn btn-primary mr-1 mb-1">حفظ</button>
                                    <a asp-action="Index" asp-controller="BankDetails" class="btn btn-outline-primary">العودة</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>


