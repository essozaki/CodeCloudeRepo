@using CodeCloude.Models
@model CategoriesVM;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Scroll - horizontal and vertical table -->
<section id="horizontal-vertical">
@*    <div class="dt-buttons btn-group">
        <a asp-action="Create" asp-controller="Categories" class="btn btn-outline-primary" style="margin:20px">
            <span><i class="feather icon-plus"></i></span>
        </a>
    </div>*@
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@Model.Categ_Name</h4>
                </div>
                <div class="card-content">
                    <div class="card-body card-dashboard">
                        <div class="table-responsive">
                            <table class="table nowrap scroll-horizontal-vertical">
                                <thead>
                                    <tr>
                                        <th>عنوان المتجر</th>
                                        <th>رابط المتجر</th>
                                        <th>تفاصيل المتجر</th>

                                        <th>القسم</th>
                                        <th>صورة المتجر</th>

                                  </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Stores)
                                    {
                                        <tr>
                                            <td>@item.Stor_Title</td>
                                            <td>
                                                <a href="@item.Stor_Link"> اضغط هنا 
                                            </td>
                                            <td>@item.Stor_Deteils</td>

                                            <td>@item.Categories.Categ_Name</td>

                                            <td>

                                                <img style="width:50px;Height:50px" src="~/Uploads/Stores/@item.Stor_ImgUrl" alt="Card image cap" style="width:100%; height:100% ; border-radius:5px">

                                            </td>
                                   
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Scroll - horizontal and vertical table -->
