@using CodeCloude.Models
@model CategoriesVM;


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="">
    <div class="">

        <h2>حذف القسم</h2>

        <form asp-controller="Categories" asp-action="Delete" class="form-group ">

            <div asp-validation-summary="All;" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.Id" disabled class="form-control" />
            <input type="hidden" asp-for="@Model.Cated_IconUrl" disabled class="form-control" />

            <label>القسم </label>
            <input type="Text" asp-for="Categ_Name" disabled class="form-control" />
            <br />
            <br />

            <label> Icon </label>
            <div style="width:150px;Height:150px">
                <img src="~/Uploads/Categories/@Model.Cated_IconUrl" alt="Card image cap" style="width:100%; height:100% ; border-radius:5px">
            </div>
            <br />
            <br />
            

            <center>
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-controller="Categories" asp-action="Edite" asp-route-id="@Model.Id" class="btn btn-primary">تعديل</a>

            </center>
            <br />
            <br />
        </form>
        <center>
            <a asp-controller="Categories" asp-action="Index" class="btn btn-success">العودة</a>
        </center>
    </div>
</section>

