@using CodeCloude.Models
@model CountriesVM;
@{
    ViewData["Title"] = "Create";
}


<!-- Basic Vertical form layout section start -->
<section id="basic-vertical-layouts">
    <div class="row match-height">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">تعديل الدولة</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form class="form form-vertical" asp-action="Edite" asp-controller="Countries" enctype="multipart/form-data">
                        <input type="hidden" asp-for="@Model.Id" />
                        <input type="hidden" asp-for="@Model.Cont_FlagUrl" />
                        <div class="form-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="first-name-vertical">اسم الدولة</label>
                                        <input type="text" id="first-name-vertical" class="form-control" asp-for="Cont_Name" placeholder="Term Details">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <fieldset class="form-group">
                                        <label for="basicInputFile">صورة العلم</label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" asp-for="Photo" id="inputGroupFile01">
                                            <label class="custom-file-label">Choose file</label>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary mr-1 mb-1">حفظ</button>
                                    <a asp-action="Index" asp-controller="Countries" class="btn btn-outline-primary">العودة</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>


